<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{0==TabCur?'text-blue cur':''}}" bindtap="tabSelect" data-id="{{0}}">
      招聘日历
    </view>
    <view class="cu-item flex-sub {{1==TabCur?'text-green cur':''}}" bindtap="tabSelect" data-id="{{1}}">
      单位需求
    </view>
    <view class="cu-item flex-sub {{2==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="{{2}}">
      招聘会
    </view>
  </view>
</scroll-view>

<!-- 列表 -->
<block wx:if="{{TabCur == 0}}">
  <!-- 月份选择 -->
  <van-datetime-picker type="year-month" value="{{ currentDate }}" min-date="{{ minDate }}"  max-date="{{ maxDate }}" bind:input="onInput" bind:confirm="onConfirm" visible-item-count="1" title="选择月份" />

  <!-- 列表 -->
  <view class="cu-timeline" wx:for="{{calendarList}}" wx:key>
    <view class="time">{{item.date}}</view>
    <view class="cu-item">
      <navigator open-type="navigate" hover-class='none' url="./recruit/recruit?id={{item.id}}">
        <view class="content" data-id="{{item.id}}">
          {{item.title}}
        </view>
      </navigator>
    </view>
  </view>
</block>
<block wx:if="{{TabCur == 1}}">
  <view class="cu-timeline" wx:for="{{demandList}}" wx:key>
    <view class="time">{{item.releaseDate}}</view>
    <view class="cu-item">
      <navigator open-type="navigate" hover-class='none' url="./demand/demand?id={{item.id}}">
        <view class="content" data-id="{{item.id}}">
          {{item.title}}
        </view>
      </navigator>
    </view>
  </view>
</block>
<block wx:if="{{TabCur == 2}}">
  <view class="cu-timeline" wx:for="{{recruitList}}" wx:key>
    <view class="time">{{item.releaseDate}}</view>
    <view class="cu-item">
      <navigator open-type="navigate" hover-class='none' url="./recruit/recruit?id={{item.id}}">
        <view class="content" data-id="{{item.id}}">
          {{item.title}}
        </view>
      </navigator>
    </view>
  </view>
</block>