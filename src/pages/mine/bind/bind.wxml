<!-- 教务未登录，引导登录 -->
<view wx:if="{{!jwExist}}">
  <view class="cu-form-group">
    <view class="title">学　号</view>
    <input placeholder="" type="number" value="{{stuNo}}" bind:change="onStuNoChange"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">密　码</view>
    <input placeholder="" type="password" value="{{password}}" bind:change="onPasswordChange"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">验证码</view>
    <input placeholder="" value="{{verify}}" type="number" bind:change="onVerifyChange" bindblur="bindblur"></input>
    <image class="image" src="{{verifyUrl}}" bindtap="changeVerify"></image>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-blue lg" bindtap="loginBtn">登录教务</button>
  </view>
</view>

<!-- 教务已登录，展示信息 -->
<view wx:if="{{jwExist}}">
  <view class="cu-list menu">
    <view class="cu-item">
      <view class="content text-middle">
        <text class="">{{name}}，你好！教务账号已经登录</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content text-middle">
        <text class="text-grey text-sm">数据有误？请重新登录教务账号</text>
      </view>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-red margin-tb-sm lg" bindtap="exitJwBtn">退出教务账号</button>
  </view>
</view>