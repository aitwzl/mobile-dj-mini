<view class="cu-card dynamic no-card">
	<view class="cu-item shadow">
		<view class="cu-list menu-avatar">
			<view class="cu-item">
				<view class="cu-avatar round lg" style="background-image:url({{article.avatar}});"></view>
				<view class="content flex-sub">
					<view>{{article.author}}</view>
					<view class="text-gray text-sm flex justify-between">
						{{time}}
					</view>
				</view>
			</view>
		</view>
		<view class="text-content">
			{{article.content}}
		</view>
		<!-- 图片 -->
		<view class="grid flex-sub padding-lr col-3 grid-square">
			<view class="bg-img" style="background-image:url({{item}});" bindtap="showImg" wx:for="{{article.imgUrlList}}" wx:key="index" id="{{item}}" data-images="{{article.imgUrlList}}">
			</view>
		</view>
		<!-- 点赞与评论数量 -->
		<view class="text-gray text-xl text-right padding">
			<text class="text-{{article.isLike ? 'red' : 'gray'}} cuIcon-likefill margin-lr-xs" bindtap="likeTitle" id="{{article.id}}"></text>{{article.likeCount == 0 ? '' : article.likeCount}}
			<text class=" cuIcon-commentfill margin-lr-xs"></text>{{article.commentCount == 0 ? '' : article.commentCount}}
		</view>
	</view>
</view>